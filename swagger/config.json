{
  "openapi": "3.0.3",
  "info": {
    "title": "AGPB API",
    "version": "3.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api"
    },
    {
      "url": "http://localhost:5000/api"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "Operations on users"
    },
    {
      "name": "contribution",
      "description": "Keep track of user contributions"
    },
    {
      "name": "lexeme",
      "description": "Fetch and use wikidata lexemes"
    },
    {
      "name": "glosses",
      "description": "Fetch Lexeme glosses in other languages"
    },
    {
      "name": "file",
      "description": "Get file downloadable url from file name"
    },
    {
      "name": "language",
      "description": "Get specific language detils"
    },
    {
      "name": "auth",
      "description": "Authenticate with your wikidata account"
    },
    {
      "name": "forms",
      "description": "Process info about forms"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retrieve all users",
        "parameters": [
          {
            "name": "x-access-tokens",
            "in": "header",
            "required": true,
            "description": "User access token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Create a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "Eugene233"
                  },
                  "pre_langs": {
                    "type": "string",
                    "example": "en,fr,de,bag,dag"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retrieve specific user",
        "parameters": [
          {
            "username": "username",
            "in": "username",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "tags": [
          "user"
        ],
        "summary": "Update a user",
        "parameters": [
          {
            "username": "username",
            "in": "username",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "username of the user to be updated"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "Eugene233"
                  },
                  "pre_langs": {
                    "type": "string",
                    "example": "en,fr,de,bag,dag"
                  }
                },
                "required": [
                  "username"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "user not found"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "Delete a user",
        "parameters": [
          {
            "username": "username",
            "in": "username",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "username of the user to be deleted"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted successfully"
          },
          "404": {
            "description": "user not found"
          }
        }
      }
    },
    "/contributions": {
      "get": {
        "tags": [
          "contribution"
        ],
        "summary": "Retrieve all contrutions",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/contribution"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "contribution"
        ],
        "summary": "Create a contribution",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "Eugene233"
                  },
                  "lang_code": {
                    "type": "string",
                    "example": "de"
                  },
                  "edit_type": {
                    "type": "string",
                    "example": "audio|lexeme"
                  },
                  "data": {
                    "type": "string",
                    "example": "Eugene233@agpb-Audio-L23"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/contributions/{id}": {
      "get": {
        "tags": [
          "contribution"
        ],
        "summary": "Retrieve specific contribution",
        "parameters": [
          {
            "id": "id",
            "in": "id",
            "required": true,
            "schema": {
              "type": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/contribution"
                }
              }
            }
          },
          "404": {
            "description": "Contribution not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "tags": [
          "contribution"
        ],
        "summary": "Update a contribution",
        "parameters": [
          {
            "id": "id",
            "in": "id",
            "required": true,
            "schema": {
              "type": "int32"
            },
            "description": "id of the contribution to be updated"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "int32",
                    "example": 1
                  },
                  "username": {
                    "type": "string",
                    "example": "Eugene233"
                  },
                  "lang_code": {
                    "type": "string",
                    "example": "de"
                  },
                  "edit_type": {
                    "type": "string",
                    "example": "audio|lexeme"
                  },
                  "data": {
                    "type": "string",
                    "example": "Eugene233@agpb-Audio-L23"
                  }
                },
                "required": [
                  "id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "contribution not found"
          }
        }
      },
      "delete": {
        "tags": [
          "contribution"
        ],
        "summary": "Delete a contribution",
        "parameters": [
          {
            "id": "id",
            "in": "id",
            "required": true,
            "schema": {
              "type": "int32"
            },
            "description": "id of the contribution to be deleted"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted successfully"
          },
          "404": {
            "description": "contribution not found"
          }
        }
      }
    },
    "/languages": {
      "get": {
        "tags": [
          "language"
        ],
        "summary": "Retrieve all language",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/languages"
                }
              }
            }
          }
        }
      }
    },
    "/languages/{lang_code}": {
      "post": {
        "tags": [
          "language"
        ],
        "summary": "Get single langue info",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lang_code": {
                    "type": "string",
                    "example": "en"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/language"
                }
              }
            }
          },
          "404": {
            "description": "Language not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/lexemes": {
      "post": {
        "tags": [
          "lexeme"
        ],
        "summary": "Search for lexemes matching a particular language",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "search": {
                    "type": "string",
                    "example": "ma"
                  },
                  "src_lang": {
                    "type": "string",
                    "example": "en"
                  },
                  "ismatch": {
                    "type": "int32",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Searched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/lexemes"
                }
              }
            }
          }
        }
      }
    },
    "/lexemes/create": {
      "post": {
        "tags": [
          "lexeme"
        ],
        "summary": "Create a new lexeme on Wikidata",
        "parameters": [
          {
            "name": "x-access-tokens",
            "in": "header",
            "required": true,
            "description": "User access token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "language": {
                    "type": "string",
                    "example": "en"
                  },
                  "value": {
                    "type": "string",
                    "example": "mother"
                  },
                  "username": {
                    "type": "string",
                    "example": "JohnD12"
                  },
                  "categoryId": {
                    "type": "string",
                    "example": "Q1084"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lexeme created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/lexemes_create"
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized"
        },
        "403": {
          "description": "Forbidden"
        }
      }
    },
    "/lexemes/{id}": {
      "post": {
        "tags": [
          "glosses"
        ],
        "summary": "Retrieve specific lexeme glosses (Possible existing word translations)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "L3625"
                  },
                  "src_lang": {
                    "type": "string",
                    "example": "en"
                  },
                  "lang_1": {
                    "type": "string",
                    "example": "de"
                  },
                  "lang_2": {
                    "type": "string",
                    "example": "fr"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/glosses"
                }
              }
            }
          },
          "404": {
            "description": "Glosses not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/file/url/{titles}": {
      "post": {
        "tags": [
          "file"
        ],
        "summary": "Get audio Full Url from filename",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titles": {
                    "type": "string",
                    "example": "File:En-us-mother.ogg|File:Electromagnetic.ogg|File:En-us-'cause.ogg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/file"
                }
              }
            }
          },
          "404": {
            "description": "File url not found"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/auth/login": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Authenticate user",
        "responses": {
          "200": {
            "description": "Authenticated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "https://www.wikidata.org/wiki/Special:OAuth/authorize?oauth_token=034dc223"
                }
              }
            }
          },
          "401": {
            "description": "Unavle to Authenticate with Wikidata"
          }
        }
      }
    },
    "/oauth-callback": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Callback for Wikidata OAuth",
        "parameters": [
          {
            "name": "oauth_verifier",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "966f69de0024b50fd3c24ffa852062"
            }
          },
          {
            "name": "oauth_token",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1625f69de0024b50fd3c24ffa852536"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Callback successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": ".WJLKFJUHFLkljasdlkfjdsafjdslakfjlkasdjfajsdlkfjsadf"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Logout user",
        "responses": {
          "200": {
            "description": "Logout successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Successfully logged out"
                }
              }
            }
          },
          "401": {
            "description": "Unable to Logout"
          }
        }
      }
    },
    "/lexeme/language/forms": {
      "post": {
        "tags": [
          "lexeme"
        ],
        "summary": "Retrieve lexeme forms without audios for contribute ",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lang_wdqid": {
                    "type": "string",
                    "example": "Q1860"
                  },
                  "limit": {
                    "type": "int32",
                    "example": 100
                  },
                  "offset": {
                    "type": "int32",
                    "example": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/lex-forms-aduio"
                }
              }
            }
          },
          "404": {
            "description": "No forms found"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "pref_langs": {
            "type": "string",
            "example": "en,fr,de,bag,dag"
          },
          "username": {
            "type": "string",
            "example": "Eugene233"
          }
        }
      },
      "contribution": {
        "type": "object",
        "properties": {
          "id": {
            "type": "int32",
            "example": 1
          },
          "username": {
            "type": "string",
            "example": "Eugene233"
          },
          "lang_code": {
            "type": "string",
            "example": "de"
          },
          "edit_type": {
            "type": "string",
            "example": "audio|lexeme"
          },
          "data": {
            "type": "string",
            "example": "Eugene233@agpb-Audio-L23-File:Audo-de.ogg"
          }
        }
      },
      "languages": {
        "type": "object",
        "properties": {
          "lang_code": {
            "type": "string",
            "example": "de"
          },
          "lang_label": {
            "type": "string",
            "example": "Deutsch"
          }
        }
      },
      "language": {
        "type": "object",
        "properties": {
          "lang_code": {
            "type": "string",
            "example": "de"
          },
          "lang_label": {
            "type": "string",
            "example": "Deutsch"
          }
        }
      },
      "lexemes": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "L30601"
          },
          "label": {
            "type": "string",
            "example": "ma"
          },
          "language": {
            "type": "string",
            "example": "tr"
          },
          "description": {
            "type": "string",
            "example": "Turkish, nyaa\u014ba bi\u025blimpahirili"
          }
        }
      },
      "file": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "example": "En-uk-mother.ogg"
          },
          "url": {
            "type": "string",
            "example": "https://upload.wikimedia.org/wikipedia/commons/6/6f/En-uk-mother.ogg"
          }
        }
      },
      "glosses": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "lexeme": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "L3625"
                  },
                  "lexicalCategoryId": {
                    "type": "string",
                    "example": "Q1084"
                  },
                  "lexicalCategoryLabel": {
                    "type": "string",
                    "example": "noun"
                  }
                }
              }
            },
            "gloss": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "language": {
                    "type": "string",
                    "example": "de"
                  },
                  "value": {
                    "type": "string",
                    "example": "Mutter"
                  },
                  "formId": {
                    "type": "string",
                    "example": "L3625-F1"
                  },
                  "audio": {
                    "type": "string",
                    "example": "https://upload.wikimedia.org/wikipedia/commons/6/6f/En-uk-mother.ogg"
                  }
                }
              }
            }
          }
        }
      },
      "lexemes_create": {
        "type": "object",
        "properties": {
          "revisionid": {
            "type": "int32",
            "example": 3435212441
          }
        }
      },
      "lex-forms-aduio": {
        "type": "object",
        "properties": {
          "forms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "lemma": {
                  "type": "string"
                },
                "lexeme": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}